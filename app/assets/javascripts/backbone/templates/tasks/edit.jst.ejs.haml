%div{id:"formTask<%= id %>"}
  .column.span-11
    .notice
      %form{id:"edit-task", name:"task"}   
        %label{for:"name"}Name:
        %input{type:"text", name:"name", id:"task_name", value:"<%= name %>"}
        %br
        %label{for:"description"}Desc:
        %input{type:"text", name:"description", id:"task_description", value:"<%= description %>"}
        %br
        /%label{for:"priority"}Priority:
        /%input{type:"select", option:[1,2,3] name:"priority", id:"priority", value:"<%= priority %>"}
        %input{type:"submit", value:"Update"}
        =link_to 'Cancel', "#/tasks/index"