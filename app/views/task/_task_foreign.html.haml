#completedTasks
  %h3.alt Completed tasks:
  - for t in @tasks.where("state = ?", true)
    #completedTask
      = check_box " ", " ",:checked => true, :onclick =>"top.location.href= \"#{t.id}/completed\"", :method => :post
      = t.name
  =link_to "Delete completed tasks", "/deleteCompletedTasks", :method=>:delete, :class=>"button"
