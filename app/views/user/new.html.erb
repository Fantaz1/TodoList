<div id="signupScreen" class=lifted>
<%= form_for(:user) do |f|%>
<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
<div class="field">
<%= f.label :login %></br>
<%= f.text_field :login, :placeholder=>"login", :required => true %>
</div>

<div class="field">
<%= f.label :password %></br>
<%= f.password_field :password, :placeholder=>"•••", :required => true %>
</div>

<div class="field">
<%= f.label :password_confirmation %></br>
<%= f.password_field :password_confirmation, :placeholder=>"•••", :required => true %>
</div>

<div class="field">
<%= f.label :email %></br>
<%= f.email_field :email, :placeholder=>"Goga@gmail.com", :required => true %>
</div>
</br>
<div class="action">
<%= f.submit 'Sign up!' %>
</div>
<% end %>
</br>
<%= link_to 'Back', root_path %>
</div>